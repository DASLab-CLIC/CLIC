<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<Operator ID="SortOperator" name="SortOperator" kind="shuffler">

    <platforms>
        <platform ID="java">
            <language>java</language>
            <implementation>./resource/sort/Sorter.jar</implementation>
            <command>
                java -jar ./resource/sort/Sorter.jar
                -Dinput_data_path={$input_file_path}
                -Doutput_data_path={$output_file_path}
                -Ddelimiter={$delimiter}
                -Dis_reverse={$is_reverse}
            </command>
            <cost>6.1732</cost>
        </platform>

        <platform ID="python">
            <language>python</language>
            <implementation>./resource/sort/sort.py</implementation>
            <command>
                python3 ./resource/sort/sort.py
                {$input_file_path}
                {$output_file_path}
                --Ddelimiter={$delimiter}
                --Dis_reverse={$is_reverse}
            </command>
            <cost>4.6915</cost>
        </platform>
    </platforms>

    <execute>
        <target_platform>null</target_platform>
        <params>
            <!-- 一定要严格遵守 `command` 里变量的名字（和相对顺序？用正则可能就不需要了，param是matcher，command是str）！！ -->
            <!-- <param ID="implementation"> </param> -->
            <param ID="input_file_path">./resources/sort/data_list.txt</param>
            <param ID="output_file_path">./resources/sort/output_list.txt</param>
            <param ID="delimiter">,</param>
            <param ID="is_reverse">true</param>
        </params>
    </execute>

</Operator>